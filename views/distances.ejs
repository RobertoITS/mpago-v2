                    raceStart2.style.fontSize = '36px';

                    titleWrapper3.style.padding = '20% 10%';
                    titleWrapper3.style.fontSize = '60px'

                    raceStart3.style.padding = "10% 10% 10% 10%";
                    raceStart3.style.fontSize = '36px';
                }
                else {

                    description.style.height = '0px';
                    description.style.padding = '0px 0px';
                    header.style.padding = '2% 2% 2% 2%';

                }
