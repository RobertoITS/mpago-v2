    credits: { enabled: false, label: 'HvDevs', position: 'right'}, 
    });

    const accordionContent = document.querySelectorAll('.accordion-content');
    
    console.log(window.screen.availHeight);
    console.log(window.screen.availWidth);

    accordionContent.forEach((item, index) => {
        let header = item.querySelector('header');

        const raceStart = document.getElementById('race-start');
        const titleWrapper = document.getElementById('title-wrapper');

        const raceStart1 = document.getElementById('race-start1');
        const titleWrapper1 = document.getElementById('title-wrapper1');

        const raceStart2 = document.getElementById('race-start2');
        const titleWrapper2 = document.getElementById('title-wrapper2');

        const raceStart3 = document.getElementById('race-start3');
        const titleWrapper3 = document.getElementById('title-wrapper3');

        header.addEventListener('click', () =>{
            item.classList.toggle('open');
            
            let description = item.querySelector('.description');
            
            if(item.classList.contains('open')){
                if(window.screen.availWidth < 470){
                    description.style.height =  `${description.scrollHeight + 45}px`;

                    if(item.querySelector('#map')){
                        description.style.padding = '0%'
                        description.style.height =  `${description.scrollHeight - 5}px`;
                        description.style.margin = '0px';
                    }else {
                        description.style.height =  `${description.scrollHeight + 45}px`;
                        description.style.padding = '15px 35px';
                    }
                    description.style.fontSize = '16px';
                    description.style.fontWeight = '300';

                    header.style.padding = '2% 10%';

                    titleWrapper.style.padding = '25px 10px';
                    titleWrapper.style.fontSize = '28px';

                    raceStart.style.padding = "2% 2% 2% 2%";
                    raceStart.style.fontSize = '24px';

                    titleWrapper1.style.padding = '25px 10px';
                    titleWrapper1.style.fontSize = '28px';

                    raceStart1.style.padding = "2% 2% 2% 2%";
                    raceStart1.style.fontSize = '24px';

                    titleWrapper2.style.padding = '25px 10px';
                    titleWrapper2.style.fontSize = '28px';

                    raceStart2.style.padding = "2% 2% 2% 2%";
                    raceStart2.style.fontSize = '24px';

                    titleWrapper3.style.padding = '25px 10px';
                    titleWrapper3.style.fontSize = '28px';

                    raceStart3.style.padding = "2% 2% 2% 2%";
                    raceStart3.style.fontSize = '24px';
                } else {

                    if(item.querySelector('#map')){
                        description.style.padding = '0%'
                        description.style.height =  `${description.scrollHeight - 5}px`;
                        description.style.margin = '0px';
                    }else {
                        description.style.height =  `${description.scrollHeight + 20}px`;
                        description.style.padding = '15px 35px';
                    }

                }

            }
            else {
                if(window.screen.availWidth < 470){
                    description.style.height = '0px';
                    description.style.padding = '0px 0px';
                    
                    header.style.padding = '2% 2% 2% 2%';
                    
                    titleWrapper.style.padding = '20% 10%';
                    titleWrapper.style.fontSize = '60px'

                    raceStart.style.padding = "10% 10% 10% 10%";
                    raceStart.style.fontSize = '36px';

                    titleWrapper1.style.padding = '20% 10%';
                    titleWrapper1.style.fontSize = '60px'

                    raceStart1.style.padding = "10% 10% 10% 10%";
                    raceStart1.style.fontSize = '36px';
                    
