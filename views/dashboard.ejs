<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>

    <!-- libreria Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,900;1,400;1,500;1,900&display=swap" rel="stylesheet">

    <!-- Importamos los icons de Ionic -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <!-- Importamos nuestro propio script -->
    <script type="module" src="/javascripts/main.js"></script>
</head>

<body>

    <style>
        .btn a {
            color: white;
        }

        .table {
            overflow-x: auto;
        }

        .table thead th {
            font-size: 12px;
        }

        .table tbody td {
            font-size: 12px;
        }
        
    </style>


    <table class="table table-dark" id="runners_table">
        <thead>
            <th scope="col">#</th>
            <th scope="col">Distancia</th>
            <th scope="col">Genero</th>
            <th scope="col">Edad</th>
            <th scope="col">Fecha de nacimiento</th>
            <th scope="col">Nombre</th>
            <th scope="col">DNI</th>
            <th scope="col"># Socio</th>
            <th scope="col">email</th>
            <th scope="col">Pago</th>
            <th scope="col">Fondos</th>
            <th scope="col">Acciones</th>
        </thead>
        <tbody>
            <% runners.map(item => { %>
                <% if (item.data.status === 'approved'){ %>
                    <tr class="table-success p-0">
                        <th scope="row">
                            <%= item.data.runnerUID %>
                        </th>
                        <td>
                            <%= item.data.catValue %>
                        </td>
                        <td>
                            <%= item.data.runnerGenre %>
                        </td>
                        <td>
                            <%= item.data.runnerAge %>
                        </td>
                        <td>
                            <%= item.data.runnerBirthDate %>
                        </td>
                        <td>
                            <%= item.data.name %>
                        </td>
                        <td>
                            <%= item.data.runnerID %>
                        </td>
                        <td>
                            <%= item.data.partnerID %>
                        </td>
                        <td>
                            <%= item.data.email %>
                        </td>
                        <td>Aprobado</td>
                        <% if (item.data.status_detail === 'accredited'){ %>
                            <td>Acreditados</td>
                            <% } %>
                                <td class="py-1">
                                    <div class="row p-0 m-0">
                                        <div class="col p-0 m-0">
                                            <div class="btn btn-primary">
                                                <ion-icon name="settings-outline"></ion-icon>
                                            </div>
                                        </div>
                                        <div class="col p-0 m-0">
                                            <div class="btn btn-success">
                                                <ion-icon name="mail-outline"></ion-icon>
                                            </div>
                                        </div>
                                        <div class="col p-0 m-0">
                                            <div class="btn btn-danger">
                                                <a href="borrar/<%= item.id %>"><ion-icon name="trash-outline"></ion-icon></a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                    </tr>
                    <% } else { %>
                        <tr class="table-warning">
                            <th scope="row">
                                <%= item.data.runnerUID %>
                            </th>
                            <td>
                                <%= item.data.catValue %>
                            </td>
                            <td>
                                <%= item.data.runnerGenre %>
                            </td>
                            <td>
                                <%= item.data.runnerAge %>
                            </td>
                            <td>
                                <%= item.data.runnerBirthDate %>
                            </td>
                            <td>
                                <%= item.data.name%>
                            </td>
                            <td>
                                <%= item.data.runnerID %>
                            </td>
                            <td>
                                <%= item.data.partnerID %>
                            </td>
                            <td>
                                <%= item.data.email %>
                            </td>
                            
                                <% if (item.data.status === 'in_process'){ %>
                                    <td>En proceso</td>
                                    <% } %>
                                <% if (item.data.status_detail === 'accredited'){ %>
                                    <td>Acreditado</td>
                                    <% } else { %>
                                        <td>Pendiente</td>
                                        <% } %>
                            
                            <% if (item.data.status === 'in_process'){ %>
                                <td>En proceso</td>
                                <% } %>
                            <% if (item.data.status_detail === 'accredited'){ %>
                                <td>Acreditados</td>
                                <% } else { %>
                                    <td>Pendientes</td>
                                    <% } %>
                                    <td class="py-1">
                                        <div class="row p-0 m-0">
                                            <div class="col p-0 m-0">
                                                <div class="btn btn-primary">
                                                    <ion-icon name="settings-outline"></ion-icon>
                                                </div>
                                            </div>
                                            <div class="col p-0 m-0">
                                                <div class="btn btn-success">
                                                    <ion-icon name="mail-outline"></ion-icon>
                                                </div>
                                            </div>
                                            <div class="col p-0 m-0">
                                                <div class="btn btn-danger">
                                                    <a href="borrar/<%= item.id %>"><ion-icon name="trash-outline"></ion-icon></a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                        </tr>
                        <% } %>

                            <% }) %>
        </tbody>

    </table>

</body>

</html>