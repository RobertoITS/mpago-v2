<section class="register" id="register">
    <div class="contenedor">
        <div class="register-wrapper" id="register-wrapper">
            <div class="form-container">
                <div class="header-bg">
                    <div class="col-lg-12 col-sm-12">
                        <header>FORMULARIO DE INSCRIPCION</header>
                    </div>
                </div>
                <div class="container f-con p-2 pt-0 sliding-form-container">
                    <div class="row text-center justify-content-center c-progress-bar-container">
                        <div id="c-progress" class="row px-5 m-0 text-center justify-content-center c-progress-bar">
                            <div class="col step">
                                <p>Datos Personales</p>
                                <div class="bullet">
                                    <span>1</span>
                                </div>
                                <ion-icon class="check" name="checkmark-outline"></ion-icon>
                            </div>
                            <div class="col step step2">
                                <p>Pago</p>
                                <div class="bullet">
                                    <span>2</span>
                                </div>
                                <ion-icon class="check" name="checkmark-outline"></ion-icon>
                            </div>
                            <div class="col step step3">
                                <p>Confirmacion</p>
                                <div class="bullet bullet-last">
                                    <span>3</span>
                                </div>
                                <ion-icon class="check" name="checkmark-outline"></ion-icon>
                            </div>
                        </div>
                        <div class="col-lg-8 text-center justify-content-center col-sm-12">
                            <div class="form-outer">
                                <form action="add-runner" method="post">
                                    <div class="r-form">
                                        <div class="page slide-page">
                                            <div class="title">
                                                Datos Personales:</div>
                                            <div class="container p-0 m-w-full mx-0 me-0">
                                                <div class="row pe-0 ps-3 register-row-custom">
                                                    <div class="col-lg-8 col-sm-8">
                                                        <div class="field">
                                                            <div class="label">
                                                                Categoria</div>
                                                            <select id="categoriesSelect"></select>
                                                            <input id="runnerUID" name="runnerUID" type="hidden">
                                                            <% if (runnersLenght) { %>
                                                                <script>
                                                                    document.getElementById('runnerUID').value = '<%= runnersLenght++ %>'
                                                                </script>
                                                                <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-3 pe-2 col-sm-4">
                                                        <div class="field">
                                                            <div class="label">
                                                                Precio</div>
                                                            <input id="transactionAmount" disabled style="color: var(--secondary)" value="10">

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="field-rname" class="field">
                                                <div class="label name-label">
                                                    Nombre y Apellido</div>
                                                <input id="r-name" type="text">

                                                <div id="field-rage" class="field mx-1" style="align-items: center;">
                                                    <div class="label">
                                                        Edad</div>
                                                    <select id="ageSelect"></select>
                                                </div>
                                            </div>
                                            <div class="field field-half">
                                                <div class="label">
                                                    DNI</div>
                                                <input id="r-id" type="text" placeholder="DNI">
                                                <div class="label label2">Numero de socio</div>
                                                <input id="partner-id" type="text" placeholder="Numero de Socio">
                                                <small>*Solo Socios del club Mari Menuco</small>
                                            </div>
                                            <div class="field email-field">
                                                <div class="label">
                                                    Email</div>
                                                <input id="r-email" name="runnerEmail" type="text" placeholder="email@email.com">
                                            </div>
                                            <div class="field">
                                                <button id="home_btn" type="button" class="firstNext mt-3 next">Siguiente</button>
                                            </div>
                                        </div>
                                        <div class="page">
                                            <div class="title">
                                                Datos de tarjeta:</div>

                                            <div class="container">
                                                <div class="row row-custom3">
                                                    <div class="col-6 text-end">Categoria</div>
                                                    <div class="col-6 text-start"><input type="text" name="cat" disabled value="21k"></div>
                                                    <div class="col-6 text-end">Nombre</div>
                                                    <div class="col-6 text-start"><input type="text" name="runnerName" disabled value="Nombre Nombre"></div>
                                                    <div class="col-6 text-end">DNI</div>
                                                    <div class="col-6 text-start"><input type="text" name="runnerID" disabled value="12121212"></div>
                                                    <div class="col-6 text-end">Precio</div>
                                                    <div class="col-6 text-start"><input type="text" name="price" disabled value="12,000.00"></div>
                                                    <div class="col-6 text-end">Costo Plataforma</div>
                                                    <div class="col-6 text-start"><input type="text" name="platform_cost" disabled value="120.00"></div>
                                                    <div class="col-6 mb-4 text-end">
                                                        <Strong>Total</Strong>
                                                        <div class="col-6 text-start"><input type="text" name="subtotal" disabled value="120.00"></div>
                                                    </div>
                                                    <div class="col-6 mb-4 text-start total"><input type="text" name="total_cost" disabled value="120.00"></div>


                                                    <div class="field mb-2 btns">
                                                        <button type="button" class="prev-2 mt-3 prev">Anterior</button>
                                                        <button id="form-checkout__submit" type="submit" class="submit mt-3">confirmar</button>

                                                    </div>
                                                </div>
                                            </div>
                                            <!-- <div class="btns-1">
                                                <button class="prev-1 prev">Anterior</button>
                                                <button id="next-1" href="../payment_page.ejs" class="next-1 next">Siguiente</button>
                                            </div> -->
                                        </div>
                                        <div class="page">
                                            <div class="title">
                                                Confirmacion:</div>
                                            <div class="container">
                                                <div class="row row-custom3">
                                                    <div class="col-6 text-end">Categoria</div>
                                                    <div class="col-6 text-start"><input type="text" disabled value="21k"></div>
                                                    <div class="col-6 text-end">Nombre</div>
                                                    <div class="col-6 text-start"><input type="text" disabled value="Nombre Nombre"></div>
                                                    <div class="col-6 text-end">DNI</div>
                                                    <div class="col-6 text-start"><input type="text" disabled value="12121212"></div>
                                                    <div class="col-6 text-end">Precio</div>
                                                    <div class="col-6 text-start"><input type="text" disabled value="12,000.00"></div>
                                                    <div class="col-6 text-end">Costo Plataforma</div>
                                                    <div class="col-6 text-start"><input type="text" disabled value="120.00"></div>
                                                    <div class="col-6 mb-4 text-end">
                                                        <Strong>Total</Strong>
                                                    </div>
                                                    <div class="col-6 mb-4 text-start total"><input type="text" disabled value="120.00"></div>


                                                    <div class="field mb-2 btns">
                                                        <button class="prev-2 mt-3 prev">Anterior</button>
                                                        <button type="submit" class="submit mt-3">confirmar</button>

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div>
                                            <input id="token" name="token" type="hidden">
                                            <input id="paymentMethodId" type="hidden">

                                            <input id="description" name="description" type="hidden" value="Product Name">
                                            <p id="payment-status">Waiting Payment</p>
                                        </div>

                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>