<section class="register" id="register">
    <div class="contenedor">
        <div class="register-wrapper" id="register-wrapper">
            <div class="form-container">
                <div class="header-bg">
                    <div class="col-lg-12 col-sm-12">
                        <header>FORMULARIO DE INSCRIPCION</header>
                    </div>
                </div>
                <div class="container p-2 sliding-form-container">
                    <div class="row text-center justify-content-center">
                        <div class="row px-5 m-0 text-center justify-content-center c-progress-bar">
                            <div class="col step">
                                <p>Datos Personales</p>
                                <div class="bullet">
                                    <span>1</span>
                                </div>
                                <ion-icon class="check" name="checkmark-outline"></ion-icon>
                            </div>
                            <div class="col step">
                                <p>Pago</p>
                                <div class="bullet">
                                    <span>2</span>
                                </div>
                                <ion-icon class="check" name="checkmark-outline"></ion-icon>
                            </div>
                            <div class="col step">
                                <p>Confirmacion</p>
                                <div class="bullet bullet-last">
                                    <span>3</span>
                                </div>
                                <ion-icon class="check" name="checkmark-outline"></ion-icon>
                            </div>
                        </div>
                        <div class="col-md-8 text-center justify-content-center">
                            <div class="form-outer">
                                <form action="#">
                                    <div class="page slide-page">
                                        <div class="title">
                                            Datos Personales:</div>
                                        <div class="container p-0 m-w-full">
                                            <div class="row pe-0 ps-3 register-row-custom">
                                                <div class="col-lg-8 col-sm-8">
                                                    <div class="field">
                                                        <div class="label">
                                                            Categoria</div>
                                                        <select name="categoriesSelect" id="categoriesSelect"></select>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 pe-2 col-sm-3">
                                                    <div class="field">
                                                        <div class="label">
                                                            Edad</div>
                                                        <select name="ageSelect" id="ageSelect"></select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div class="label">
                                                Nombre y Apellido</div>
                                            <input type="text" name="runner-name">
                                        </div>
                                        <div class="field">
                                            <div class="label">
                                                DNI</div>
                                            <input type="text">
                                        </div>
                                        <div class="field">
                                            <div class="label">
                                                Email</div>
                                            <input type="text">
                                        </div>
                                        <div class="field">
                                            <button id="home_btn" class="firstNext mt-3 next">Siguiente</button>
                                        </div>
                                    </div>
                                    <div class="page">
                                        <div class="title">
                                            Datos de tarjeta:</div>
                                        <form id="form-checkout">
                                                <div class="container">
                                                    <div class="row register-row-custom2">
                                                        <div class="col-lg-12 col-sm-12">
                                                            <div class="field">
                                                                <div class="label">
                                                                    Numero de tarjeta</div>
                                                                <input type="number" maxlength="16" name="runner-name">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            <div class="field">
                                                                <div class="label">
                                                                    Fecha expiracion (MM/AAAA)</div>
                                                                <select name="cc-month" id=""></select>
                                                                <select name="cc-year" id=""></select>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4 col-sm-4">
                                                            <div class="field">
                                                                <div class="label">
                                                                    Cod. Seguridad</div>
                                                                <input type="number" maxlength="4" name="runner-name">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12 col-sm-12">
                                                            <div class="field">
                                                                <div class="label">
                                                                    Nombre del Titular</div>
                                                                <input type="text" maxlength="16" name="runner-name">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4 col-sm-4">
                                                            <div class="field">
                                                                <div class="label">
                                                                    Tipo DNI</div>
                                                                <select name="cc-month" id=""></select>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-8 col-sm-8">
                                                            <div class="field">
                                                                <div class="label">DNI del titular</div>
                                                                <input type="number" maxlength="8" name="runner-name">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row field btns">
                                                    <button class="prev-1 prev">Anterior</button>
                                                    <button class="next-1 next">Pagar</button>
                                                </div>
                                        
                                        </div>
                                    <div class="page">
                                        <div class="title">
                                            Date of Birth:</div>
                                        <div class="field">
                                            <div class="label">
                                                Date</div>
                                            <input type="text">
                                        </div>
                                        <div class="field">
                                            <div class="label">
                                                Gender</div>
                                            <select>
                                                <option>Male</option>
                                                <option>Female</option>
                                                <option>Other</option>
                                              </select>
                                        </div>
                                        <div class="field btns">
                                            <button class="prev-2 mt-3 prev">Anterior</button>
                                            <button class="submit mt-3">Finalizar</button>
                                        </div>
                                    </div>
                                </form>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





